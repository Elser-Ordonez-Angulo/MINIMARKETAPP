<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo5">






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCarro"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        tools:listitem="@layout/item_carrodetalle"
        tools:ignore="MissingConstraints" />






    <Button
        android:id="@+id/btnIngresarapedido"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Detalle de pedido"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/verdeclaro"/>

</androidx.constraintlayout.widget.ConstraintLayout>