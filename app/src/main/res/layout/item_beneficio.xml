<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:orientation="vertical"

    >




    <LinearLayout

        android:layout_width="210dp"
        android:layout_height="100dp"
        android:layout_margin="6dp"
        android:orientation="vertical"
        android:id="@+id/linerar1"

        >

        <TextView
            android:id="@+id/txtTitubeneficio"
            android:layout_width="190sp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"

            android:text="COMPRA HOY"
            android:textColor="@color/verdeclaro"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/txtSubtbene"
            android:layout_width="190sp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"

            android:text="Y RETIRA SIN COSTO"
            android:textColor="@color/verdeclaro"
            android:textSize="12sp"
            android:textStyle="bold"

            />





        <TextView
            android:id="@+id/txtEnproductos"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="en productos de supermercado"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="5dp"
        >


        <ImageView
            android:id="@+id/imgBeneficio"
            android:layout_width="120dp"
            android:layout_height="90dp"

            android:src="@drawable/beneficio1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        >

        <TextView
            android:id="@+id/txtRecordatorio"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:text="Si realizas tu compra antes de las 7 pm,podras recibirlo hoy mismo."
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>










</androidx.cardview.widget.CardView>